<% @tweets.each do |tweet| %>
  <div class="card">
    <div class="card-header">
      <strong>Faber Ruiz</strong>
      <small>@faruiz9</small>
      <small><%= time_ago_in_words(tweet.created_at) %> ago.</small>
    </div>
     <div class="card-body">
      <p><%= tweet.tweeet %></p>
    </div>
    <div class="card-footer">
      <%= link_to "View", tweet_path(tweet), class: "btn btn-outline-success" %>
    </div>
  </div>
  <br>
<%end%>