<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @tweet, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :tweeet, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :tweeet, rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
        <div class="mb-3">
          <%= link_to '[ Cancel and return to articles listing ]', tweets_path, class: "text-info" %>
